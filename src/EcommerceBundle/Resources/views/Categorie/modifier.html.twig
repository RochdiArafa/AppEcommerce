{% extends 'dashboard.html.twig' %}

{% block content %}
<!-- Static Table Start -->
    <div class="product-tab-list tab-pane fade active in" id="description" style="margin-left: 20px;">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="review-content-section">
                    <h4>Modifier Categorie</h4>
                    <form id="add-department" action="{{ path("Categorie_update_dashboard"  , {'id': categorie.id }) }}"  method="post" class="add-department" novalidate="novalidate">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input name="nom" id="nom" type="text" class="form-control" placeholder="Nom" value="{{ categorie.nom }}">
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Nom {{ error }}</p>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <input name="description" id="description" type="text" class="form-control" placeholder="Description" value="{{ categorie.description }}">
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Description {{ error }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="payment-adress">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Modifier</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<!-- Static Table End -->

{% endblock content %}