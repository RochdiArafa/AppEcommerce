{% extends 'dashboard.html.twig' %}

{% block content %}
<!-- Static Table Start -->
    <div class="product-tab-list tab-pane fade active in" id="description" style="margin-left: 20px;">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="review-content-section">
                    <h4>Modifier Produit</h4>
                    <form id="add-department" action="{{ path("Produit_update_dashboard" , {'id': produit.id }) }}) }}"  method="post" class="add-department" novalidate="novalidate">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input name="nom" type="text" class="form-control" placeholder="Nom" value="{{ produit.nom }}">
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Nom {{ error }}</p>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <input name="description" type="text" class="form-control" placeholder="Description" value="{{ produit.description }}" >
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Description {{ error }}</p>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <input name="materials" type="email" class="form-control" placeholder="matière" value="{{ produit.materials }}">
                                </div>
                                <div class="form-group">
                                    <input name="size" type="email" class="form-control" placeholder="Taille" value="{{ produit.size }}">
                                </div>
                                <div class="form-group">
                                    <input name="color" type="text" class="form-control" placeholder="Couleur" value="{{ produit.color }}">
                                </div>
                                <div class="form-group">
                                    <input type=text list=categor class="form-control" placeholder="Categorie" name="categorie" value="{{ produit.Categorie.nom }}">
                                    <datalist id=categor  >
                                        {% for categorie in categories %}
                                            <option> {{ categorie.nom }}
                                        {% endfor %}
                                    </datalist>
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Categorie {{ error }}</p>
                                    {% endif %}
                                </div>

                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <input name="stock" type="number" class="form-control" placeholder="Quantité" value="{{ produit.stock }}">
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Quantité {{ error }}</p>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <input name="prix" type="number" class="form-control" placeholder="Prix" value="{{ produit.prix }}">
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Prix {{ error }}</p>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <input name="weight" type="text" class="form-control" placeholder="Poids" value="{{ produit.weight }}">
                                </div>
                                <div class="form-group">
                                    <input name="dimensions" type="text" class="form-control" placeholder="dimensions" value="{{ produit.dimensions }}">
                                </div>
                                <div class="form-group">
                                    <input type=text list=fourniss class="form-control" placeholder="Fournisseur" name="fournisseur" value="{{ produit.Fournisseur.nom }}">
                                    <datalist id=fourniss  >
                                        {% for fournisseur in fournisseurs %}
                                            <option> {{ fournisseur.nom }}
                                        {% endfor %}
                                    </datalist>
                                    {% if error == "ne doit pas etre vide !" %}
                                        <p style="color:#ac2925"> Fournisseur {{ error }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input name="image" type="file" class="form-control" placeholder="Image">
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="payment-adress">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
<!-- Static Table End -->

{% endblock content %}