{% extends 'dashboard.html.twig' %}

{% block content %}
    <div class="product-status mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-status-wrap drp-lst">
                        <h4>Liste Produit</h4>
                        <div class="add-product">
                            <a href="{{ path("Produit_goajouter_dashboard")}}">Ajouter Produit</a>
                        </div>
                        <div class="asset-inner">
                            <table>
                                <tbody><tr>
                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Quantité</th>
                                    <th>Prix</th>
                                    <th>Catégorie</th>
                                    <th>Fournisseur</th>
                                    <th>Couleur</th>
                                    <th>Actions</th>
                                </tr>
                                {% for produit in produits %}
                                    <tr>
                                        <td>{{ produit.nom }}</td>
                                        <td>{{ produit.description }}</td>
                                        <td>{{ produit.stock }}</td>
                                        <td>{{ produit.prix }}</td>
                                        <td>{{ produit.Categorie.nom }}</td>
                                        <td>{{ produit.Fournisseur.nom }}</td>
                                        <td>{{ produit.color }}</td>

                                        <td>
                                            <a href="{{ path("Produit_goupdate_dashboard",{'id': produit.id} ) }}"> <i class="fa fa-pencil-square-o" aria-hidden="true" ></i></a>
                                            <a href="{{ path("supprimer_produit_dashboard",{'id': produit.id} ) }}"> <i class="fa fa-trash-o" aria-hidden="true" style="color:#ac2925"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <div class="text-center">{{ knp_pagination_render(produits) }}</div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock content%}